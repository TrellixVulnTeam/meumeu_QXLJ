extends ../layout.pug

block content 
    .row
        .col-md-6.offset-md-3.col-12
            form(action="/clientes/update", method="POST")
                .form-group
                    label Nombre 
                    input.form-control(type="text", name="nombre", value=cliente.nombre)
                .form-group
                    label Apellidos 
                    input.form-control(type="text", name="apellidos", value=cliente.apellidos) 
                .form-group
                    label Direcci√≥n 
                    input.form-control(type="text", name="direccion", value=cliente.direccion) 
                .form-group
                    label Edad 
                    input.form-control(type="text", name="edad", value=cliente.edad) 
                .form-group
                    label Email 
                    input.form-control(type="text", name="email", value=cliente.email) 
                .form-group
                    label Sexo
                    select#selectSexo.form-control(name="sexo")
                        option Selecciona el sexo
                        option(value="M") masculino 
                        option(value="F") femenino 
                .form-group
                    label Cuota 
                    input.form-control(type="text", name="cuota", value=cliente.cuota) 
                input(type="hidden", name="id", value=cliente.id)
                input.btn.btn-block.btn-info(type="submit", value="Enviar")
    script.
        const sexo = "#{cliente.sexo}";
        const options = document.querySelectorAll('#selectSexo option');
        for(let option of options){
            if(option.value === sexo){
                option.selected = true;
            }    
        }